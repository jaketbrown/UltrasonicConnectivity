<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".defaultPiece">

    <Button
        android:id="@+id/artPiece_1_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/artPiece_1_button_str"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/artPiece_2_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/artPiece_2_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/artPiece_2_button_str"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="70dp"
        app:layout_constraintTop_toTopOf="@+id/artPiece_1_button"
        app:layout_constraintBottom_toBottomOf="@+id/artPiece_3_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/artPiece_3_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/artPiece_3_button_str"
        app:layout_constraintTop_toTopOf="@+id/artPiece_2_button"
        app:layout_constraintBottom_toBottomOf="@+id/defaultPieceStr"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/defaultPieceStr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/defaultPieceStr"
        app:layout_constraintTop_toTopOf="@+id/artPiece_3_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>